---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <style>
      :root {
        color-scheme: dark;
      }
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }
      html,
      body {
        height: 100%;
        margin: 0;
        background: #000;
        color: #fff;
        overscroll-behavior: none;
        -webkit-text-size-adjust: 100%;
      }
    </style>
    <style is:global>
      @import "tailwindcss";
    </style>
    <link rel="icon" type="image/svg+xml" href="/tttt/vite.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white selection:bg-cyan-500/30">
    <slot />
  </body>
</html>
